{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "installCommand": "npm install",
  "functions": {
    "api/exchange-rates.ts": {
      "runtime": "@vercel/node"
    },
    "api/currency-history.ts": {
      "runtime": "@vercel/node"
    },
    "api/conversions.ts": {
      "runtime": "@vercel/node"
    },
    "api/favorites.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}